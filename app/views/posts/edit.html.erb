<h1>Edit Post</h1>

<%= form_with model: @post , url: post_path do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
<br>
    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>
<br>
    <div>
        <%= form.submit "Save Post"%>
    </div>
<% end %>